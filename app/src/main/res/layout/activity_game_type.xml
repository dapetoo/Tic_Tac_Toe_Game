<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPrimaryDark"
    tools:context="com.dapetoo.ttt.GameType">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT GAMETYPE"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        tools:targetApi="jelly_bean"/>

    <Button
        android:id="@+id/onePlayer"
        android:layout_marginTop="41dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/one_player"/>

    <Button
        android:id="@+id/twoPlayer"
        android:layout_marginTop="41dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/two_player"/>


    <ImageView
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/developer"
        android:contentDescription="@string/developer_logo" />

</LinearLayout>